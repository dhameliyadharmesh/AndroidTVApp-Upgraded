<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Onboard" parent="Theme.Leanback.Onboarding">
        <item name="defaultBrandColor">@color/colorPrimary</item>
        <item name="defaultBrandColorDark">@color/colorPrimaryDark</item>
    </style>
</resources>
